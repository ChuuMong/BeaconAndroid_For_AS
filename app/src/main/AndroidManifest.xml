<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.view">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme">
        <activity
                android:name="com.example.activity.LodingActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.activity.MainActivity"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log"
                android:theme="@style/CustomActionBarTheme2" >
        </activity>
        <activity
                android:name="com.example.activity.ReloadActivity"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log" >
        </activity>
        <activity
                android:name="com.example.activity.ImageTouchActivity"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log" >
        </activity>
        <activity
                android:name="com.example.activity.ReloadImageNullActivity"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log" >
        </activity>
        <activity
                android:name="com.example.activity.IntroActivity"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log" >
        </activity>
        <activity
                android:name="com.example.activity.GalleryAcitiviy"
                android:label="@string/activity_name"
                android:icon="@drawable/titlebar_log" >
        </activity>
    </application>

</manifest>
